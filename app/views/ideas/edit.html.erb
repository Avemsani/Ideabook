<h1>Editing Idea #<%= @idea.id %></h1>

<form action="/ideas/<%= @idea.id %>/update">
  <div>
    <label for="caption">caption</label><br />
    <input id="caption" name="caption" value="<%= @idea.caption  %>" type="text" />
  </div>
  <div>
    <label for="title">title</label><br />
    <input id="title" name="title" value="<%= @idea.title  %>" type="text" />
  </div>
  <div>
    <input type="submit">
  </div>
</form>


